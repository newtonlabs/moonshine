<div class="recipe_card">
  <h3> <%= @recipe.name%> </h3> 
  <p>
    <ul>
    <% @recipe.quantity.split(",").each do |ingredient|  %> 
      <li><%=ingredient%></li>
    <% end %>
    </ul>
  </p>

  <img src="images/<%= @recipe.glass.gsub(" ","_").downcase %>.gif"></img>
  <p><%= @recipe.procedure%></p>